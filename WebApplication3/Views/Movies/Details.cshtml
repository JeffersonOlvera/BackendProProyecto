@model WebApplication3.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="page-header mb-4">
    <h1><i class="bi bi-film"></i> Movie Details</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card shadow-custom">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" class="card-img-top" alt="@Model.Title" style="height: 500px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/300x500?text=No+Image'">
            }
            else
            {
                <img src="https://via.placeholder.com/300x500?text=No+Image" class="card-img-top" alt="No image" style="height: 500px; object-fit: cover;">
            }
        </div>
    </div>

    <div class="col-md-8">
        <div class="card shadow-custom mb-4">
            <div class="card-header">
                <h3 class="mb-0">@Model.Title</h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong><i class="bi bi-tags text-primary-custom"></i> Genre:</strong><br>
                            <span class="badge bg-primary">@Model.Genre.Name</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong><i class="bi bi-person-video3 text-primary-custom"></i> Director:</strong><br>
                            <span class="text-muted">@Model.Director.Name</span>
                        </p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong><i class="bi bi-clock text-primary-custom"></i> Duration:</strong><br>
                            <span class="text-muted">@Model.Duration minutes</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong><i class="bi bi-calendar text-primary-custom"></i> Release Date:</strong><br>
                            <span class="text-muted">@Model.ReleaseDate.ToString("MMMM dd, yyyy")</span>
                        </p>
                    </div>
                </div>

                <hr>

                <div class="mb-3">
                    <h5><i class="bi bi-card-text text-primary-custom"></i> Synopsis</h5>
                    <p class="text-muted">@Model.Synopsis</p>
                </div>
            </div>
        </div>

        <div class="card shadow-custom">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Additional Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Movie ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Genre ID:</dt>
                    <dd class="col-sm-8">@Model.GenreId</dd>

                    <dt class="col-sm-4">Director ID:</dt>
                    <dd class="col-sm-8">@Model.DirectorId</dd>

                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <dt class="col-sm-4">Image URL:</dt>
                        <dd class="col-sm-8"><small class="text-muted">@Model.Image</small></dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>
